<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date of Publication</th>
      <th>Number of Sales</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.summary %></td>
        <td><%= book.date_of_publication %></td>
        <td><%= book.number_of_sales %></td>
        <td>
          <%= link_to "Show", book %>
          <%= link_to "Edit", edit_book_path(book) %>
          <%= link_to "Delete", book, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New book", new_book_path %>

